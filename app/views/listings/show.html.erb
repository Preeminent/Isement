<p id="notice"><%= notice %></p>

<div class="row">
  <div class="col-md-6">
    <div class="thumbnail">
    <%= image_tag @listing.image.url %>
     </div>
  </div>

  <div class="col-md-6">
    <h3 class="show-title"><%= @listing.name %></h3>
    <p class="show-details"><%= @listing.description %></p>
    <p class="show-sm-details"><%= number_to_currency(@listing.price) %></p>
    <p class="show-sm-details"><%= @listing.city %></p>
    <p class="show-sm-details"><%= @listing.state %></p>
  </div>

</div>


<%= link_to 'Edit', edit_listing_path(@listing), class: "btn btn-link" %> |
<%= link_to 'Back', listings_path, class: "btn btn-link" %>
