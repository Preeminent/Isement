<div class="container padbotlg">
<%= form_for @listing, :html => { :multipart => true } do |f| %>
  <% if @listing.errors.any? %>
    <div id="error_explanation" class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <h2><%= pluralize(@listing.errors.count, "error") %> prohibited this listing from being saved:</h2>

      <ul>
      <% @listing.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="stripe_error" class="alert alert-danger" style="display:none">
    <noscript> Javascript is disabled. Order cannot be placed. First enable it in your browser.</noscript>
  </div>


  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <span class="small">(Be as descriptive as possible. Explain everything about your ad space.)</span>
    <%= f.text_area :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :price %>
    <%= f.text_field :price, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :duration %>
    <span class="small">(Daily, Weekly, Or Monthly?)</span>
    <%= f.text_field :duration, class: "form-control" %>

  </div>

  <div class="form-group">
    <%= f.label :street %>
    <span class="small">(Include street only if your listing is stationary. Will not be moving.)</span>
    <%= f.text_field :street, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :city %>
    <%= f.text_field :city, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :state %>
    <%= f.text_field :state, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image %>
    <span class="small">(This is your (best), main image. Shown in search results.)</span>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_two %>
    <span class="small">(Include another image of your space.)</span>
    <%= f.file_field :image_two, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :image_three %>
    <span class="small">(Include one more image of your space.)</span>
    <%= f.file_field :image_three, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.text_field :category, class: "form-control" %>
  </div>

<div class="form-group">
    <%= f.label :terms %>
    <span class="small">(What type of ad messages you will and won't allow.)</span>
    <%= f.text_area :terms, class: "form-control" %>
  </div>


  <% if current_user.recipient.blank? %>
    <br>
    <h1>Bank Account Information</h1>
    <p class="sm-message">(You'll only need to enter this once.)</p>

    <div class="form-group">
      <%= label_tag :country %>
      <%= text_field_tag :country, nil, { :name => nil, :'data-stripe' => "country", class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= label_tag :routing_number %>
      <%= text_field_tag :routing_number, nil, { :name => nil, :'data-stripe' => "routingNumber", class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= label_tag :account_number %>
      <%= text_field_tag :account_number, nil, { :name => nil, :'data-stripe' => "accountNumber", class: "form-control" } %>
    </div>
  <% end %>

    <div class="checkbox">

        
          
            <input type="checkbox" name="terms" class="acceptterms" />
              <label for="terms">Before submitting you must click the checkbox acknowledging you've read the Terms page. You agree to
                display your listing for the full purchased amount of time, and you understand that 
                failure to do so can result in legal action from a buyer. </label>
         
     
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-primary btn-lg" %>
  </div>
<% end %>
</div>