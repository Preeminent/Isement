<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
  <div class="col-md-3">

<div class="thumbnail">
  <%= link_to image_tag(listing.image.url), listing %>
       
      <div class="caption">
        <h2 class="center"><%= listing.name %></h2>
        <p><%= listing.description %></p>
        <p class="center"><%= number_to_currency(listing.price) %></p>
        <p class="center"><%= "Sold by #{listing.user.name}" %></p>
        <p class="center"><%= listing.city %></p>
        <p class="center"><%= listing.state %></p>
        <% if (user_signed_in?) && (current_user == listing.user) %>
          <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
          <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
          <% end %>
        
      </div>
    </div>


  </div>
  <% end %>
</div>
<% if user_signed_in? %>
<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
<% end %>