<h1>Listings</h1>

<div class="row">
  <% @listings.each do |listing| %>
  <div class="col-md-3">

<div class="thumbnail">
       <%= image_tag listing.image.url %>
      <div class="caption">
        <h2 class="center"><%= listing.name %></h2>
        <p><%= listing.description %></p>
        <p class="center"><%= number_to_currency(listing.price) %></p>
        <p class="center"><%= listing.city %></p>
        <p class="center"><%= listing.state %></p>
        <%= link_to 'Show', listing, class: "btn btn-link" %>
        <%= link_to 'Edit', edit_listing_path(listing), class: "btn btn-link" %>
        <%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-link" %>
        
      </div>
    </div>


  </div>
  <% end %>
</div>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-link" %>
